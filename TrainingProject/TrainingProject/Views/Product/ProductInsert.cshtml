@model TrainingProject.Models.ProductModel
@{
    ViewBag.Title = "InsertProduct";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/CategoryInsertStyle.css">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <script src="~/Scripts/Product.js"></script>
</head>

<div class="container" id="div_main">
    <div class="row">
        <div class="col-md-12">
            <div id="div_header">
                <h2>Insert Product</h2>

                <input type="button" class="btn btn-primary" title="Product list" value="Product List" id="text_link" onclick="window.location='@Url.Action("Listing", "Product")'" />
                <br><br>
            </div>
            <div id="form-style">
                @using (Html.BeginForm("InsertUpdateProduct", "Product", FormMethod.Post, new { id = "Product_Form" }))
                {
                    <div hidden>

                        @Html.TextBoxFor(x => x.Product_ID, new { name = "Product_name", @maxlength = "20", id = "Product_ID" })

                    </div>

                    <div>
                        <label for="category_description">Name </label>
                        @Html.TextBoxFor(x => x.Product_name, new { name = "Product_name", autocomplete = "off", @maxlength = "20", id = "Product_name" })
                        <span hidden id="p_name" class="error">Please Enter a Valid Name</span>
                    </div>

                    <div>
                        <label for="category_description">Price </label>
                        @Html.TextBoxFor(x => x.Price, new { name = "Price", @maxlength = "20", id = "Price" })
                        <span hidden id="p_price" class="error">Please Enter a Valid Number</span>
                    </div>

                    <div>
                        <label for="category_description">Quantity </label>
                        @Html.TextBoxFor(x => x.NoOfProducts, new { name = "NoOfProducts", autocomplete = "off", @maxlength = "20", id = "NoOfProducts" })
                        <span hidden id="p_no" class="error">Please Enter a Valid Number</span>
                    </div>

                    <div>
                        <label for="category_description">Valid Till </label>
                        @Html.TextBoxFor(x => x.Date, new { @type = "date", name = "date", id = "Date" })
                        <span hidden id="p_date" class="error">Please Enter a Valid date</span>
                    </div>
                    
                    <div>
                        <label for="category_description">Description </label>
                        @Html.TextAreaFor(x => x.Description, new { id = "Description", autocomplete = "off", @maxlength = "100", name = "Description" })
                        <span hidden id="p_description" class="error">This field is required</span>
                    </div>

                    <div>
                        <label for="category_description">Active or Not </label>
                        @Html.CheckBoxFor(x => x.IsActive, new { @id = "IsActive" })

                    </div>

                    <div id="div_btn">
                        <button type="submit" id="submitbtn" class="btn"> Submit</button>
                        <button type="reset" class="btn" id="reset_btn">Reset </button>
                    </div>

                    <div id="InsertMsg"> @TempData["DataInsertMessage"] </div>

                }

            </div>
        </div>
    </div>
</div>




