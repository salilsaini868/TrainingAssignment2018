@using System.Data;
@model System.Data.DataTable
@{
    ViewBag.Title = "CategoryList";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/CategoryListStyle.css">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/CategoryList.js"></script>
</head>

<body>
    <div class="container-fluid" id="div_main">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-8">
                <div id="div_header">
                    <text id="text_header" , class="navbar-brand">
                        <h2>
                            Product Category
                        </h2>
                    </text>
                    <input type="button" value="add new" id="text_link" onclick="window.location='@Url.Action("Detail", "Category")'" />
                </div>
                <div id="search_box">
                    @using (Html.BeginForm("Listing", "Category"))
                    {
                        <input name="txtSearch" type="text" autocomplete="off" id="txtSearch" value="@ViewBag.searchQuery"/>    
                        <input type="submit" value="Search" id="btn_submit" />                    
                        <input type="submit" value="Show all" id="full_list" onclick="window.location='@Url.Action("Listing", "Category")'" />
                    }
                </div>
                <br>
                    <table cellspacing="9" cellpadding="6">
                        <tr id="table_head">
                            <th>Category ID</th>
                            <td></td>
                            <th>Name</th>
                            <td></td>
                            <th>Description</th>
                            <td></td>
                            <th>IsActive</th>
                        </tr>
                        @foreach (DataRow item in Model.Rows)
                        {
                            <tr>
                                <th>@item["CategoryId"].ToString()</th>
                                <td></td>
                                <td>@item["CategoryName"].ToString()</td>
                                <td></td>
                                <td>@item["CategoryDescription"].ToString()</td>
                                <td></td>
                                <td>@item["IsActive"].ToString()</td>
                                <td></td>
                                <td>
                                    <text class="link_edit"><a href="@Url.Action("Detail", "Category", new { id = item["CategoryId"] })">edit</a></text> |
                                    <text class="link_delete"><a href="@Url.Action("Delete", "Category", new { id = item["CategoryId"] })">delete</a></text>
                                </td>
                            </tr>
                        }
                    </table>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>


