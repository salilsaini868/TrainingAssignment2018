@model TrainingProject.Models.LoginPage

@{
    ViewBag.Title = "LoginScreen";
}

<head>    
    <link rel="stylesheet" type="text/css" href="~/Content/LoginStyle.css" >    
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Login.js"></script>
</head>

<body>
    <div id="divMain">
        <div id="banner">
            <h2>User Login</h2>
        </div>
        <br><br>
        @using (Html.BeginForm("LoginScreen", "Login", FormMethod.Post, new { id = "form1" }))
        {
            <div>
                <label for="userName">Username </label>
                @Html.TextBoxFor(lpage => lpage.Username,  new { maxlength =20, autocomplete = "off", id = "userName" })
            </div>
            <div>
                <label for="password">Password </label>
                @Html.PasswordFor(lpage => lpage.Password, new { maxlength = 20, id = "password" })
            </div>
            <div id="div_btn">
                <button type="submit" value="Submit" id="sub_btn">Submit</button>
                <button type="reset" value="Reset" id="res_btn">Reset</button>
                <div id="view_message">
                    @ViewBag.message
                    @ViewBag.message2
                </div>
            </div>
        }
        
    </div>
</body>


